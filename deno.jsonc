{
  "tasks": {
    "build": "deno test -A; deno run -A ./bin/build.ts",
    "watch": "deno run -A ./bin/watch.ts"
  },
  "lint": {
    "exclude": ["dist/"]
  },
  "test": {
    "exclude": ["dist/"]
  },
  "fmt": {
    "lineWidth": 80,
    "singleQuote": true,
    "include": ["**/*.ts", "**/*.tsx", "**/*.json", "**/*.jsonc"],
    "exclude": ["dist/"]
  }
}
